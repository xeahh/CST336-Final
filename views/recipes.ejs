<!DOCTYPE html>
<html lang="en">
<head>
  <link href="css/recipes.css" rel="stylesheet">
     <%- include("partials/head.ejs") %> 
    <title>Recipes</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <%- include("partials/nav.ejs") %>

    <h1 id="recipes">Recipes</h1>

    <div id="mainContainer">
        <div id="favorites" style="padding: 20px;">
          <div style="display: flex; justify-content: center;">
            <span id="favTitle">Favorites <img id="heart" src="/imgs/heart.png"></span>
            <button style="border: 0px; background-color: #ffffff00;"><i class="fa fa-plus"></i></button>
          </div>
           
            <div id="meals">
                    <% favorites.forEach((meal) => { %>
                        <div>
                            <img style="width: 150px;" src="<%= meal.thumbnail %>">
                        </div>
                        
                    <% }) %>
            </div>
        </div>


        <div id="allRecipes">

          <a style="width: 100%; height: 50px; background-color: #ffffff;" href="/recipe/new"><button id="addRecipe" style="border: none; background: none;" >
              +Add Recipe
            </button></a>

            <div id="recipeBox">
                <% for(let row of rows){%>
                    <div style="border-radius: 10px;" class="recipe-item" data-recipe-id="<%= row.recipe_id %>" data-recipe-img="<%= row.thumbnail %>"><%= row.name %></div>
                <%}%>
            </div>
    </div>
    </div>

    <div id="recipeDetailsModal" class="modal">
      <div class="modal-content">
          <span class="close" id="close2">&times;</span>
          <div id="recipeDetails"></div>
          <div id="mealplanid">
          </div>
      </div>
    </div>
    <script src="js/recipes.js"></script>r
</body>
</html>