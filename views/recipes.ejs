<!-- add recipe modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">New Recipe Entry Form</h5>
         
        </button>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <label for="recipient-name" class="col-form-label">Recipe Name:</label>
              <input type="text" class="form-control" id="recipient-name">
            </div>
            <div class="form-group">
              <label for="message-text" class="col-form-label"> Seperate each ingredient with a comma (ex: Cilantro, Rice)
              </label><br>
             
              <textarea class="form-control" id="message-text"></textarea>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Send message</button>
        </div>
      </div>
    </div>
  </div>
  <script >
    $('#exampleModal').on('show.bs.modal', function (event) {
    var button = $(event.relatedTarget) // Button that triggered the modal
    var recipient = button.data('whatever') // Extract info from data-* attributes
    // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
    // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
    var modal = $(this)
    modal.find('.modal-title').text('New message to ' + recipient)
    modal.find('.modal-body input').val(recipient)
  })
  </script>

<!-- for meal modals --> 
    <div class="modal fade" id="mealModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="mealName">Modal title</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <div id="mealInfo"> 
                  <img id="mealImg"><br>
                  <h1 id="mealName"></h1><br>
                  Biography: <span id="bio"></span><br>
                  Country: <span id="country"></span><br>
                  Date of Birth: <span id="dob"></span><br>
                  Date of Death:<span id="dod"></span><br>
                  Profession: <span id="profession"></span><br>
                  Sex: <span id="sex"></span>



              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  <script>
      let authorLinks = document.querySelectorAll(".authorLink");
      for(let i of authorLinks) {
          i.addEventListener("click", displayAuthorInfo);
      }
      async function displayAuthorInfo() {
          let authorId = this.getAttribute('authorId');
          // let url = `/api/author/${authorId}`;
          let url = "/api/author/" + authorId;
          let response = await fetch(url);
          let data = await response.json();
          console.log(data);

          let dobFormatted = new Date(data[0].dob);

          document.querySelector("#authorName").innerText = data[0].firstName + " " + data[0].lastName;
          document.querySelector("#authorImg").src = data[0].portrait;
          document.querySelector("#dob").innerText = dobFormatted.getDate()+"/" + (dobFormatted.getMonth() + 1) + "/" + dobFormatted.getFullYear();
          document.querySelector("#dod").innerText = dobFormatted.getDate()+"/" + (dobFormatted.getMonth() + 1) + "/" + dobFormatted.getFullYear();
          document.querySelector("#bio").innerText= data[0].biography;
          document.querySelector("#country").innerText= data[0].country;
          document.querySelector("#profession").innerText= data[0].profession;
          document.querySelector("#sex").innerText= data[0].sex;


          const myModal = new bootstrap.Modal('#authorModal');
          myModal.show();


      }
  </script>


  
